FORM AboutForm 2 34 156 124
USABLE
MODAL
SAVEBEHIND
DEFAULTBTNID okBtn
BEGIN
  TITLE "About Plua RT"
  LABEL "Plua RT @@VERSION@@" 3001 CENTER 16 FONT 2
  LABEL "M\341rcio Migueletto de Andrade" 3003 CENTER PREVBOTTOM+10 FONT 1
  LABEL "mmand@uai.com.br" 3004 CENTER PREVBOTTOM+1 FONT 1
  LABEL "http://meusite.uai.com.br/" 3005 CENTER PREVBOTTOM+6 FONT 1
  LABEL "~mmand/plua/plua.htm" 3006 CENTER PREVBOTTOM+1 FONT 1
  BUTTON "Ok" okBtn CENTER PREVBOTTOM+9 AUTO AUTO
END

FORM InputForm 2 107 156 51
USABLE
MODAL
SAVEBEHIND
DEFAULTBTNID okBtn
BEGIN
  TITLE "Input"
  FIELD inputFld 4 16 146 11 UNDERLINED SINGLELINE USABLE MAXCHARS 255
  BUTTON "Ok" okBtn 4 PREVBOTTOM+8 AUTO AUTO
  BUTTON "Cancel" cancelBtn PREVRIGHT+6 PREVTOP AUTO AUTO
  GRAFFITISTATEINDICATOR 136 37 
END

ALERT ErrorAlert
ERROR
BEGIN
  TITLE "Error"
  MESSAGE "^1 ^2 ^3"
  BUTTONS "Ok"
END

ALERT InfoAlert
INFORMATION
BEGIN
  TITLE "Information"
  MESSAGE "^1 ^2 ^3"
  BUTTONS "Ok"
END

ALERT ConfirmAlert
CONFIRMATION
BEGIN
  TITLE "Confirmation"
  MESSAGE "^1 ^2 ^3"
  BUTTONS "Yes" "No"
END

FONT ID FixedFontLow FONTID 255 "../5x11.txt"

FONTFAMILY ID FixedFontHigh FONTID 255
