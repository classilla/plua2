#include "../../../include/plua/gui.h"

FORM RuntimeForm 0 0 160 160
USABLE
NOFRAME
BEGIN
  TITLE "Plua2 RT"
  LABEL "This is the runtime for applications" 3001 CENTER 20
  LABEL "created with Plua." 3002 CENTER PREVBOTTOM+1
  LABEL "For more information on Plua check:" 3003 CENTER PREVBOTTOM+10
  LABEL "http://meusite.uai.com.br/" 3004 CENTER PREVBOTTOM+6 FONT 1
  LABEL "~mmand/plua/plua.htm" 3005 CENTER PREVBOTTOM+1 FONT 1
END

MENU AppMenu
BEGIN
  PULLDOWN "Menu"
  BEGIN
    MENUITEM "About Plua"       AboutCmd
  END
  PULLDOWN "Edit"
  BEGIN
    MENUITEM "Undo"             UndoCmd         "U"
    MENUITEM "Cut"              CutCmd          "X"
    MENUITEM "Copy"             CopyCmd         "C"
    MENUITEM "Paste"            PasteCmd        "P"
    MENUITEM "Select All"       SelectCmd       "S"
    MENUITEM "-"                0
    MENUITEM "Keyboard"         KeyboardCmd     "K"
    MENUITEM "Graffiti Help"    GraffitiCmd     "G"
  END
END

FORM GraphicForm 0 0 160 160
USABLE
NOFRAME
MENUID AppMenu
BEGIN
  TITLE ""
  SCROLLBAR graphicScl  0 0 7 44 NONUSABLE
  SCROLLBAR graphicScl2 0 0 7 44 NONUSABLE
  SCROLLBAR graphicScl3 0 0 7 44 NONUSABLE
  SCROLLBAR graphicScl4 0 0 7 44 NONUSABLE
END

FORM FullGraphicForm 0 0 160 160
USABLE
NOFRAME
MENUID AppMenu
BEGIN
  SCROLLBAR graphicScl  0 0 7 44 NONUSABLE
  SCROLLBAR graphicScl2 0 0 7 44 NONUSABLE
  SCROLLBAR graphicScl3 0 0 7 44 NONUSABLE
  SCROLLBAR graphicScl4 0 0 7 44 NONUSABLE
END

FORM DialogForm 40 40 80 80
USABLE
MODAL
BEGIN
  TITLE ""
  SCROLLBAR graphicScl  0 0 7 44 NONUSABLE
  SCROLLBAR graphicScl2 0 0 7 44 NONUSABLE
  SCROLLBAR graphicScl3 0 0 7 44 NONUSABLE
  SCROLLBAR graphicScl4 0 0 7 44 NONUSABLE
